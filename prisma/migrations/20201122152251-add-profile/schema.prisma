model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String
  program Course? @relation(fields: [courseId], references:[id])
  courseId Int?
}

model Course {
  id    Int     @id @default(autoincrement())
  title String @unique
  students User[]
}
