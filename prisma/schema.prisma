// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  role      Int       @default(0)
  comments  Comment[]
  ratings   Rating[]
}

model Movie {
  id          Int        @id @default(autoincrement())
  title       String
  releaseYear Int
  price       Int
  rating      Int        @default(0)
  image       String
  slug        String     @default("")
  comments    Comment[]
  categories  Category[]
  Rating      Rating[]
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String
  movies Movie[]
}

// TODO make a rating table where we can store ratings
// who did the rating and for what movie
model Rating {
  id       Int   @id @default(autoincrement())
  rate     Int
  authorId Int
  movieId  Int
  author   User  @relation(fields: [authorId], references: [id])
  movie    Movie @relation(fields: [movieId], references: [id])
}

model Comment {
  id      Int    @id @default(autoincrement())
  text    String
  movieId Int
  ownerId Int
  movie   Movie  @relation(fields: [movieId], references: [id])
  owner   User   @relation(fields: [ownerId], references: [id])
}
